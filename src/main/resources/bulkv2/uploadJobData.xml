<template xmlns="http://ws.apache.org/ns/synapse" name="uploadJobData">
    <parameter name="jobId" description="Job ID"/>
    <parameter name="inputData" description="Input Data"/>
    <sequence>
        <property name="sf_bulk_inputData" expression="$func:inputData"/>
        <class name="org.wso2.carbon.salesforce.connector.RestURLBuilder">
            <property name="resourcePath"
                      expression="fn:concat('/services/data/{$version}/jobs/ingest/',$func:jobId,'/batches')"/>
        </class>
        <payloadFactory media-type="text">
            <format>
                $1
            </format>
            <args>
                <arg evaluator="xml" expression="$ctx:sf_bulk_inputData"/>
            </args>
        </payloadFactory>
        <property name="DISABLE_CHUNKING" scope="axis2" type="STRING" value="true"/>
        <property name="messageType" value="text/csv" scope="axis2"/>
        <property name="ContentType" value="text/csv" scope="axis2"/>
        <header name="Authorization" scope="transport"
                expression="fn:concat('Bearer ', get-property('_OH_INTERNAL_ACCESS_TOKEN_'))"/>
        <filter source="$ctx:salesforceRestBlocking" regex="true">
            <then>
                <call blocking="true">
                    <endpoint>
                        <http method="PUT" uri-template="{uri.var.auth}{+uri.var.urlPath}{+uri.var.urlQuery}"/>
                        <timeout>
                            <duration>{$ctx:timeout}</duration>
                            <responseAction>fault</responseAction>
                        </timeout>
                    </endpoint>
                </call>
            </then>
            <else>
                <call>
                    <endpoint>
                        <http method="PUT" uri-template="{uri.var.auth}{+uri.var.urlPath}{+uri.var.urlQuery}"/>
                        <timeout>
                            <duration>{$ctx:timeout}</duration>
                            <responseAction>fault</responseAction>
                        </timeout>
                    </endpoint>
                </call>
            </else>
        </filter>
    </sequence>
</template>

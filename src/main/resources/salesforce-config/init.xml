<template name="init" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="connectionName" description="Logical name for this Salesforce connection."/>
    <parameter name="connectionType" description="Authentication method. Possible values: 'OAuth2', 'BasicAuth'."/>
    <parameter name="grantType" description="OAuth 2.0 grant type: Authorization Code, Client Credentials, Password, or Refresh Token."/>
    <parameter name="clientId" description="OAuth2 Client ID."/>
    <parameter name="clientSecret" description="OAuth2 Client Secret."/>
    <parameter name="tokenUrl" description="OAuth2 Token URL (e.g., https://login.salesforce.com/services/oauth2/token)."/>
    <parameter name="instanceUrl" description="Salesforce Instance URL (e.g., https://your-org.my.salesforce.com)."/>
    <parameter name="apiVersion" description="Salesforce REST API version (e.g., v56.0)."/>
    <parameter name="refreshToken" description="OAuth2 refresh token for the refresh_token flow."/>
    <parameter name="username" description="Salesforce username."/>
    <parameter name="password" description="Salesforce password."/>
    <parameter name="securityToken" description="Salesforce security token."/>
    <parameter name="scope" description="OAuth2 scopes (space-separated) for Authorization Code and Client Credentials flows."/>
    <parameter name="timeout" description="Connection timeout duration in milliseconds."/>
    <parameter name="readTimeout" description="Socket read timeout duration in milliseconds."/>
    <parameter name="blocking" description="Set to true to perform blocking invocations to Salesforce."/>

    <sequence>
        <filter source="$ctx:connectionType" regex="OAuth2">
            <then>
                <class name="org.wso2.carbon.salesforce.connector.SalesforceOAuthAccessTokenHandler"/>
                <header name="Authorization" expression="fn:concat('Bearer ', $ctx:_OH_INTERNAL_ACCESS_TOKEN_)" scope="transport"/>
            </then>
        </filter>

        <filter source="$ctx:connectionType" regex="BasicAuth">
            <then>
                <class name="org.wso2.carbon.salesforce.connector.SalesforceBasicAuthHandler"/>
                <header name="Authorization" expression="fn:concat('Basic ', $ctx:_OH_INTERNAL_BASIC_AUTH_HEADER_)" scope="transport"/>
            </then>
        </filter>
    </sequence>
</template>

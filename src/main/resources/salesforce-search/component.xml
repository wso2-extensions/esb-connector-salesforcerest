<component name="salesforce-search" type="synapse/template" displayName="Search">
    <subComponents>
        <component name="search">
            <displayName>Search</displayName>
            <file>search.xml</file>
            <description>Executes the specified SOSL search</description>
        </component>
        <component name="searchScopeAndOrder">
            <displayName>Search Scope And Order</displayName>
            <file>searchScopeAndOrder.xml</file>
            <description>Returns an ordered list of objects in the default global search scope of a logged-in user.
            </description>
        </component>
        <component name="searchResultLayout">
            <displayName>Search Result Layout</displayName>
            <file>searchResultLayout.xml</file>
            <description>Returns search result layout information for the objects in the query string</description>
        </component>
        <component name="searchSuggestedRecords">
            <displayName>Search Suggested Records</displayName>
            <file>searchSuggestedRecords.xml</file>
            <description>Returns a list of suggested records whose names match the user’s search string</description>
        </component>
        <component name="searchSuggestedArticleTitle">
            <displayName>Search Suggested Article Title</displayName>
            <file>searchSuggestedArticleTitle.xml</file>
            <description>Returns a list of Salesforce Knowledge articles whose titles match the user’s search query
                string
            </description>
        </component>
        <component name="searchSuggestedQueries">
            <displayName>Search Suggested Queries</displayName>
            <file>searchSuggestedQueries.xml</file>
            <description>Returns suggested searches based on query text and past user searches in Salesforce Knowledge.
            </description>
        </component>
    </subComponents>
</component>

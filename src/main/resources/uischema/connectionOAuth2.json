{
  "connectorName": "salesforce",
  "connectionName": "OAuth 2.0",
  "title": "Salesforce OAuth 2.0 Connection Type",
  "helpTip": "Establishes an OAuth 2.0 connection with Salesforce using the selected grant flow. Required to authenticate and authorize Salesforce operations.",
  "testConnectionEnabled": true,
  "elements": [
    {
      "type": "attribute",
      "value": {
        "name": "connectionName",
        "displayName": "Connection Name",
        "inputType": "string",
        "defaultValue": "SALESFORCE_OAUTH_2",
        "required": "true",
        "helpTip": "Logical name for this Salesforce OAuth 2.0 connection"
      }
    },
    {
      "type": "attribute",
      "value": {
        "name": "grantType",
        "displayName": "Grant Type",
        "inputType": "comboOrExpression",
        "comboValues": [
          "Authorization Code",
          "Client Credentials",
          "Refresh Token",
          "Password"
        ],
        "defaultValue": "Client Credentials",
        "required": "true",
        "helpTip": "Which OAuth2 flow to use"
      }
    },
    {
      "type": "attribute",
      "value": {
        "name": "scope",
        "displayName": "Scope",
        "inputType": "stringOrExpression",
        "defaultValue": "",
        "required": "false",
        "helpTip": "Space-separated OAuth scopes (optional)"
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Client Credentials / Auth Code",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "clientId",
              "displayName": "Client ID",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "OAuth2 Client (Consumer) ID",
              "enableCondition": [
                { "grantType": "Authorization Code" },
                { "grantType": "Client Credentials" }
              ]
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "clientSecret",
              "displayName": "Client Secret",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "OAuth2 Client Secret",
              "enableCondition": [
                { "grantType": "Authorization Code" },
                { "grantType": "Client Credentials" }
              ]
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "tokenUrl",
              "displayName": "Token URL",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "OAuth2 token endpoint URL (e.g. https://login.salesforce.com/services/oauth2/token)",
              "enableCondition": [
                { "grantType": "Authorization Code" },
                { "grantType": "Client Credentials" }
              ]
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "instanceUrl",
              "displayName": "Instance URL",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Salesforce instance URL for API calls (e.g. https://your-org.my.salesforce.com)",
              "enableCondition": [
                { "grantType": "Authorization Code" },
                { "grantType": "Client Credentials" }
              ]
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "apiVersion",
              "displayName": "API Version",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Salesforce REST API version (e.g. v56.0)",
              "enableCondition": [
                { "grantType": "Authorization Code" },
                { "grantType": "Client Credentials" }
              ]
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Usernameâ€“Password Flow",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "username",
              "displayName": "Username",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Salesforce username for the password flow",
              "enableCondition": [ { "grantType": "Password" } ]
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "password",
              "displayName": "Password",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Salesforce password (append security token to password)",
              "enableCondition": [ { "grantType": "Password" } ]
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "securityToken",
              "displayName": "Security Token",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "Salesforce security token for the password flow",
              "enableCondition": [ { "grantType": "Password" } ]
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Refresh Token Flow",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "refreshToken",
              "displayName": "Refresh Token",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "true",
              "helpTip": "OAuth2 refresh token for the refresh_token flow",
              "enableCondition": [ { "grantType": "Refresh Token" } ]
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Advanced",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "timeout",
              "displayName": "Timeout",
              "inputType": "stringOrExpression",
              "defaultValue": "3000",
              "required": "false",
              "helpTip": "Connection timeout in milliseconds"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "readTimeout",
              "displayName": "Read Timeout",
              "inputType": "stringOrExpression",
              "defaultValue": "",
              "required": "false",
              "helpTip": "Socket read timeout in milliseconds"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "blocking",
              "displayName": "Blocking",
              "inputType": "boolean",
              "defaultValue": "false",
              "required": "false",
              "helpTip": "Set to true to perform blocking invocations to Salesforce"
            }
          }
        ]
      }
    }
  ]
}
